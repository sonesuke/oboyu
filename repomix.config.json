{
  "input": {
    "maxFileSize": 52428800
  },
  "output": {
    "filePath": "repomix-output.xml",
    "style": "xml",
    "parsableStyle": false,
    "fileSummary": true,
    "directoryStructure": true,
    "files": true,
    "removeComments": false,
    "removeEmptyLines": false,
    "compress": true,
    "topFilesLength": 10,
    "showLineNumbers": false,
    "copyToClipboard": false,
    "git": {
      "sortByChanges": true,
      "sortByChangesMaxCommits": 100,
      "includeDiffs": false
    }
  },
  "include": [
    "src/**/*.py",
    "tests/**/*.py",
    "pyproject.toml",
    "*.toml",
    "*.cfg",
    "*.ini",
    ".github/**/*.yml",
    ".github/**/*.yaml",
    "**/Dockerfile*",
    "**/*.dockerfile", 
    "**/docker-compose*.yml",
    "**/docker-compose*.yaml",
    ".pre-commit-config.yaml",
    "**/*.json",
    "**/*.yaml", 
    "**/*.yml",
    "*.env.example",
    ".gitignore",
    ".gitattributes",
    ".claude",
    "**/.claude",
    "*.md",
    "docs/**/*.md",
    "**/*.rst",
    "**/*.txt",
    "bench/**/*.yaml",
    "bench/**/*.yml",
    "bench/**/*.json",
    "scripts/**/*",
    "tools/**/*", 
    "**/*.sh",
    "**/*.ps1",
    "**/*.bat",
    "**/*.html",
    "**/*.css",
    "**/*.js",
    "**/*.ts",
    "**/*.sql",
    "**/*.xml",
    "LICENSE*",
    "CHANGELOG*",
    "CONTRIBUTING*",
    "SECURITY*",
    "CODE_OF_CONDUCT*",
    "AUTHORS*",
    "CONTRIBUTORS*"
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "uv.lock",
      "**/*.log",
      "**/*.tmp",
      "**/node_modules/**",
      "**/__pycache__/**",
      "**/venv/**",
      "**/.venv/**",
      "**/dist/**",
      "**/build/**",
      "**/*.egg-info/**",
      "**/coverage/**",
      "**/.coverage",
      "**/.pytest_cache/**",
      "**/test-results/**",
      "**/.mypy_cache/**",
      "**/.ruff_cache/**",
      "**/htmlcov/**",
      "**/*.pyc",
      "**/*.pyo",
      "**/*.pyd",
      "**/__pycache__/**",
      "**/repomix-output.xml"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  },
  "tokenCount": {
    "encoding": "o200k_base"
  }
}